{
  "format": "page",
  "id": "blog_post",
  "json": {
    "Main": {
      "title": {
        "config": {
          "label": "Title",
          "placeholder": "Post title"
        },
        "type": "StructuredText"
      },
      "featured_image": {
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": []
        },
        "type": "Image"
      },
      "publication_date": {
        "config": {
          "label": "Publication Date"
        },
        "type": "Date"
      },
      "slices": {
        "config": {
          "choices": {
            "simple_hero": {
              "type": "SharedSlice"
            }
          }
        },
        "fieldset": "Slice Zone",
        "type": "Slices"
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  },
  "label": "Blog Post",
  "repeatable": true,
  "status": true
}
